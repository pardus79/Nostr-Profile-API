PORT=3000
NODE_ENV=development

# Default relays to connect to (comma separated list)
DEFAULT_RELAYS=wss://relay.damus.io,wss://relay.nostr.info,wss://nostr.zebedee.cloud

# Cache settings
CACHE_TTL=3600
PROFILE_CACHE_SIZE=1000

# Request timeouts
REQUEST_TIMEOUT_MS=5000

# Logging
LOG_LEVEL=info

# Security settings
# Comma-separated list of API keys (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
API_KEYS=your-api-key-1,your-api-key-2

# CORS settings - comma-separated list of allowed origins, or * for all
ALLOWED_ORIGINS=https://yourdomain.com,https://anotherdomain.com

# Rate limiting
RATE_LIMIT_MAX=100
SPEED_LIMIT_AFTER=50

# Trusted proxy IPs (comma-separated) for proper IP detection behind load balancers
TRUSTED_PROXIES=127.0.0.1,::1